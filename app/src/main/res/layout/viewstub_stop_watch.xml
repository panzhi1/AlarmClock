<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/timer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.strangeman.alarmclock.view.MyStopWatch
        android:id="@+id/watch"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layerType="software"/>
    <LinearLayout
        android:id="@+id/black"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/watch">
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/black">

        <LinearLayout
            android:id="@+id/btn_start_llyt2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/btn_stop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:textColor="@android:color/white"
                    android:drawableTop="@drawable/bg_timer_pause_btn"
                    android:text="@string/stop"
                    android:visibility="gone"/>

                <TextView
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:drawableTop="@drawable/bg_timer_start_btn"
                android:text="@string/start"
                />
            </FrameLayout>

            <TextView
                android:id="@+id/btn_reset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:drawableTop="@drawable/bg_timer_reset_btn"
                android:text="@string/reset"/>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
