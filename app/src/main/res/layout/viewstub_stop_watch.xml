<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/timer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.strangeman.alarmclock.view.MyStopWatch
        android:id="@+id/watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="software"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/watch">

        <LinearLayout
            android:id="@+id/btn_start_llyt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp">

                <TextView
                    android:id="@+id/btn_stop"
                    style="@style/timer_btn"
                    android:drawableTop="@drawable/bg_timer_pause_btn"
                    android:text="@string/stop"
                    android:visibility="gone"/>

                <TextView
                android:id="@+id/btn_start"
                style="@style/timer_btn"
                android:drawableTop="@drawable/bg_timer_start_btn"
                android:text="@string/start"
                />
            </FrameLayout>

            <TextView
                android:id="@+id/btn_reset"
                style="@style/timer_btn"
                android:drawableTop="@drawable/bg_timer_reset_btn"
                android:text="@string/reset"/>

        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
